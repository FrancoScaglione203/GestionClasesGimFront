@model GestionClasesGimFront.ViewModels.HomeViewModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Home Page";
    string dniSession = HttpContextAccessor.HttpContext.Session.GetString("Dni");
    string tokenSession = HttpContextAccessor.HttpContext.Session.GetString("Token");

}



<div id="token" data-token="@tokenSession"></div>

<div class="text-center">
    <h1 class="display-4">Bienvenido a Galatas Gimnasio</h1>
    <p>Dni: @dniSession</p>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSHg3oGo-pOCsAs22Zaf8fhRYbNJrtfGQfhgVztc7d4mS04epnkmle0ZC_f276uhKRTVxc&usqp=CAU" alt="Descripción de la imagen" style="width: 300px; height: auto;" />
    <div>
        <h2>Horarios</h2>
        <p>Lunes a Viernes de 8hrs a 22hrs </p>
        <p>Sabados de 8hrs a 13hrs </p>
        <p>Domingos Cerrado </p>
    </div>
    <div>
        <h2>Anuncios</h2>
        <p>- El fin de semana largo de marzo el gimnasio permanecera cerrado por reformas</p>
    </div>
</div>


<script src="~/js/Home/Home.js"></script>