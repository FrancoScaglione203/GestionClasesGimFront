@model GestionClasesGimFront.ViewModels.AlumnosViewModel

<div class="modal fade" id="alumnoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Modificacion de Usuario.</h5>
            </div>
            @using (Html.BeginForm("EditarAlumno", "/Alumnos", FormMethod.Post))
            {
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Nombre</label>
                            @Html.EditorFor(x=> x.Nombre, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>

                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Apellido</label>
                            @Html.EditorFor(x=> x.Apellido, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Dni:</label>
                            @Html.TextBoxFor(x => x.Dni, new { @readonly = "readonly", @class = "col-md-8 form-control" })
                        </div>
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Clave</label>
                            @Html.EditorFor(x=> x.Clave, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-5 form-control-label">Role</label>
                            @Html.EditorFor(x=> x.RoleId, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Imagen Url</label>
                            @Html.EditorFor(x=> x.imagenUrl, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Imagen</label>
                            @if (!string.IsNullOrEmpty(Model.imagenUrl))
                            {
                                <img src="@Model.imagenUrl" alt="Imagen del alumno" class="img-fluid" />
                            }
                            else
                            {
                                <p>No hay imagen disponible</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
                </div>

            }
        </div>
    </div>
</div>